<?xml version="1.0" encoding="utf-8"?>
<!--membuat tampilan fragment3-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_3">

    <!--menyisipkan gambar-->
    <ImageView
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/warning"/>

    <!--diperlukan layout didalamnya untuk mengatur posisi teks-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <!--menyisipkan teks "welcome"-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="75dp"
            android:text="Welcome!"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <!--menyisipkan teks "Hello, don't forget to verification your account!"-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="75dp"
            android:text="Hello, don't forget to verification your account!"
            android:textSize="15sp"/>
    </LinearLayout>
</FrameLayout>